<EditForm Model="NewClient" OnValidSubmit="HandleSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <h3>Add New Client</h3>

    <div class="form-group mb-3">
        <label>First Name:</label>
        <InputText @bind-Value="NewClient.FirstName" class="form-control" />
          <ValidationMessage For="@(() => NewClient.FirstName)" />
    </div>

    <div class="form-group mb-3">
        <label>Last Name:</label>
        <InputText @bind-Value="NewClient.LastName" class="form-control" />
        <ValidationMessage For="@(() => NewClient.LastName)" />

    </div>

    <div class="form-group mb-3">
        <label>Emirates ID:</label>
        <InputText @bind-Value="NewClient.EmiratesId" class="form-control" />
        <ValidationMessage For="@(() => NewClient.EmiratesId)" />

    </div>

    <button type="submit" class="btn btn-primary">Add Client</button>
</EditForm>

@code {
    [Parameter] public ClientDto NewClient { get; set; } = new();
    [Parameter] public EventCallback OnAddClient { get; set; }

    private async Task HandleSubmit()
    {
        await OnAddClient.InvokeAsync();
    }
}